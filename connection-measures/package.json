{
  "name": "@nzz/et-utils-connection-measures",
  "version": "0.0.4",
  "type": "module",
  "description": "Reads connection infos and/or measures the speed for a high/low resolution decision",
  "main": "dist/cjs/index.js",
  "module": "dist/mjs/index.js",
  "exports": {
    ".": {
      "import": "./dist/mjs/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nzzdev/ed-tech-utilities.git",
    "directory": "connection-measures"
  },
  "scripts": {
    "prepublishOnly": "npm run test && npm run clean && npm run buildMjs && npm run buildCjs && npm run addMjsPackageJson && npm run addCjsPackageJson",
    "clean": "rimraf dist",
    "buildMjs": "tsc -p tsconfig-mjs.json",
    "addMjsPackageJson": "cp ./package-mjs.json ./dist/mjs/package.json",
    "buildCjs": "tsc -p tsconfig-cjs.json",
    "addCjsPackageJson": "cp ./package-cjs.json ./dist/cjs/package.json",
    "start": "npm run buildMjs -- -w",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "author": "Andrea Br√ºhlmann",
  "license": "MIT",
  "dependencies": {
    "@cloudflare/speedtest": "^1.6.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@testing-library/svelte": "^5.2.8",
    "@types/node": "^20.12.12",
    "jsdom": "^27.0.0",
    "rimraf": "^6.0.1",
    "svelte": "^5.0.0",
    "ts-node": "^10.8.0",
    "typescript": "^5.6.3",
    "vite": "^7.1.9",
    "vitest": "^3.2.4",
    "rollup": "^4.52.4"
  }
}
